<Window x:Class="Booking.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booking.Views"
        mc:Ignorable="d"
        Title="스크린 골프장 관리 시스템" 
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="스크린 골프장 관리 시스템" 
                              TextAlignment="Center"
                              FontSize="28" FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock x:Name="CurrentTimeText" 
                              Text="2025년 10월 24일 14:35:20"
                              TextAlignment="Center"
                              FontSize="16" Foreground="White" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 방 카드 영역 -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="방 현황" 
                      FontSize="24" FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ============ 방 1 카드 ============ -->
                <Border Grid.Row="0" Grid.Column="0" 
                       Background="White" 
                       CornerRadius="40" 
                       MouseLeftButtonDown="RoomCard_Click"
                       Tag="1">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="방 1" 
                                  FontSize="32" FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>

                        <!-- 통일된 구조! -->
                        <StackPanel Grid.Row="1" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock x:Name="Room1CN"
                                      Text="{Binding Room1.CustomerName}" 
                                      FontSize="30" FontWeight="Bold" 
                                      HorizontalAlignment="Center"
                                      Foreground="#333"
                                      Margin="0,0,0,10"/>
                            <TextBlock x:Name="Room1CT"
                                      Text="{Binding Room1.TimeRange}" 
                                      FontSize="18" 
                                      HorizontalAlignment="Center"
                                      Foreground="#666"/>
                        </StackPanel>

                        <Border x:Name="Room1StatusBorder"
                                Grid.Row="2" Background="{Binding Room1.StatusColor}" 
                               CornerRadius="10" Padding="15,10">
                            <TextBlock x:Name="Room1StatusText"
                                      Text="{Binding Room1.StatusText}" 
                                      FontSize="22" FontWeight="Bold" 
                                      Foreground="White" 
                                      HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- ============ 방 2 카드 ============ -->
                <Border Grid.Row="0" Grid.Column="2" 
                       Background="White" 
                       CornerRadius="40" 
                       MouseLeftButtonDown="RoomCard_Click"
                       Tag="2">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="방 2" 
                                  FontSize="32" FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>

                        <!-- 통일된 구조! -->
                        <StackPanel Grid.Row="1" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock x:Name="Room2CN"
                                      Text="{Binding Room2.CustomerName}"
                                      FontSize="30" FontWeight="Bold" 
                                      HorizontalAlignment="Center"
                                      Foreground="#333"
                                      Margin="0,0,0,10"/>
                            <TextBlock x:Name="Room2CT"
                                      Text="{Binding Room2.TimeRange}" 
                                      FontSize="18" 
                                      HorizontalAlignment="Center"
                                      Foreground="#666"/>
                        </StackPanel>

                        <Border x:Name="Room2StatusBorder"
                                Grid.Row="2" Background="{Binding Room2.StatusColor}" 
                               CornerRadius="10" Padding="15,10">
                            <TextBlock x:Name="Room2StatusText"
                                      Text="{Binding Room2.StatusText}" 
                                      FontSize="22" FontWeight="Bold" 
                                      Foreground="White" 
                                      HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- ============ 방 3 카드 ============ -->
                <Border Grid.Row="0" Grid.Column="4" 
                       Background="White" 
                       CornerRadius="40" 
                       MouseLeftButtonDown="RoomCard_Click"
                       Tag="3">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="방 3" 
                                  FontSize="32" FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>

                        <!-- 통일된 구조! -->
                        <StackPanel Grid.Row="1" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock x:Name="Room3CN"
                                      Text="{Binding Room3.CustomerName}" 
                                      FontSize="30" FontWeight="Bold" 
                                      HorizontalAlignment="Center"
                                      Foreground="#333"
                                      Margin="0,0,0,10"/>
                            <TextBlock x:Name="Room3CT"
                                      Text="{Binding Room3.TimeRange}" 
                                      FontSize="18" 
                                      HorizontalAlignment="Center"
                                      Foreground="#666"/>
                        </StackPanel>

                        <Border x:Name="Room3StatusBorder"
                                Grid.Row="2" Background="{Binding Room3.StatusColor}" 
                               CornerRadius="10" Padding="15,10">
                            <TextBlock x:Name="Room3StatusText"
                                      Text="{Binding Room3.StatusText}" 
                                      FontSize="22" FontWeight="Bold" 
                                      Foreground="White" 
                                      HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- ============ 방 4 카드 ============ -->
                <Border Grid.Row="2" Grid.Column="0" 
                       Background="White" 
                       CornerRadius="40" 
                       MouseLeftButtonDown="RoomCard_Click"
                       Tag="4">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="방 4" 
                                  FontSize="32" FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>

                        <!-- 통일된 구조! -->
                        <StackPanel Grid.Row="1" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock x:Name="Room4CN"
                                      Text="{Binding Room4.CustomerName}" 
                                      FontSize="30" FontWeight="Bold" 
                                      HorizontalAlignment="Center"
                                      Foreground="#333"
                                      Margin="0,0,0,10"/>
                            <TextBlock x:Name="Room4CT"
                                      Text="{Binding Room4.TimeRange}" 
                                      FontSize="18" 
                                      HorizontalAlignment="Center"
                                      Foreground="#666"/>
                        </StackPanel>

                        <Border x:Name="Room4StatusBorder"
                                Grid.Row="2" Background="{Binding Room4.StatusColor}" 
                               CornerRadius="10" Padding="15,10">
                            <TextBlock x:Name="Room4StatusText"
                                      Text="{Binding Room4.StatusText}" 
                                      FontSize="22" FontWeight="Bold" 
                                      Foreground="White" 
                                      HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- ============ 방 5 카드 ============ -->
                <Border Grid.Row="2" Grid.Column="2" 
                       Background="White" 
                       CornerRadius="40" 
                       MouseLeftButtonDown="RoomCard_Click"
                       Tag="5">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="방 5" 
                                  FontSize="32" FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>

                        <!-- 통일된 구조! -->
                        <StackPanel Grid.Row="1" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock x:Name="Room5CN"
                                      Text="{Binding Room5.CustomerName}" 
                                      FontSize="30" FontWeight="Bold" 
                                      HorizontalAlignment="Center"
                                      Foreground="#333"
                                      Margin="0,0,0,10"/>
                            <TextBlock x:Name="Room5CT"
                                      Text="{Binding Room5.TimeRange}" 
                                      FontSize="18" 
                                      HorizontalAlignment="Center"
                                      Foreground="#666"/>
                        </StackPanel>

                        <Border x:Name="Room5StatusBorder"
                                Grid.Row="2" Background="{Binding Room5.StatusColor}" 
                               CornerRadius="10" Padding="15,10">
                            <TextBlock x:Name="Room5StatusText"
                                      Text="{Binding Room5.StatusText}" 
                                      FontSize="22" FontWeight="Bold" 
                                      Foreground="White" 
                                      HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!--요약 버튼-->
                <Border Grid.Row="2" Grid.Column="4" 
                       Background="White" 
                       CornerRadius="40" 
                       MouseLeftButtonDown="Summary_Click"
                       Tag="5">
                    <Grid Margin="0">
                        <TextBlock Text="남은 예약 확인" FontSize="30"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
            
        </Grid>
    </Grid>
</Window>