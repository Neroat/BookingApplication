<Window x:Class="Booking.Views.SummaryBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="오늘 전체 예약" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="오늘 전체 예약 현황" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock x:Name="CurrentDateText" 
                          Text="2025년 10월 24일"
                          FontSize="16" Foreground="White" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- 메인 영역 -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 통계 카드 -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 총 예약 -->
                <Border Grid.Column="0" Background="White" 
                        CornerRadius="10" Padding="20"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="총 예약" 
                                  FontSize="16" Foreground="#666"/>
                        <TextBlock x:Name="TotalBookingsText" 
                                  Text="0건" 
                                  FontSize="32" FontWeight="Bold" 
                                  Foreground="#2196F3"/>
                    </StackPanel>
                </Border>

                <!-- 진행중 -->
                <Border Grid.Column="2" Background="White" 
                        CornerRadius="10" Padding="20"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="사용중" 
                                  FontSize="16" Foreground="#666"/>
                        <TextBlock x:Name="UsingText" 
                                  Text="0건" 
                                  FontSize="32" FontWeight="Bold" 
                                  Foreground="#F44336"/>
                    </StackPanel>
                </Border>

                <!-- 예정 -->
                <Border Grid.Column="4" Background="White" 
                        CornerRadius="10" Padding="20"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="예정" 
                                  FontSize="16" Foreground="#666"/>
                        <TextBlock x:Name="BookingText" 
                                  Text="0건" 
                                  FontSize="32" FontWeight="Bold" 
                                  Foreground="#FF9800"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 테이블 -->
            <Border Grid.Row="1" Background="White" 
                    CornerRadius="10" Padding="20"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="예약 목록" 
                              FontSize="20" FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <DataGrid Grid.Row="1" 
                              x:Name="SummaryBookingGrid"
                              ItemsSource="{Binding SummaryBookings}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderThickness="0"
                              AlternatingRowBackground="#F9F9F9"
                              RowHeight="40"
                              FontSize="14">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="방 번호" 
                                                Binding="{Binding RoomNumber}"
                                               Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="시작 시간" 
                                               Binding="{Binding StartDate, StringFormat='HH:mm'}" 
                                               Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="종료 시간" 
                                               Binding="{Binding EndDate, StringFormat='HH:mm'}" 
                                               Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="고객명" 
                                               Binding="{Binding CustomerName}" 
                                               Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="연락처" 
                                               Binding="{Binding CustomerPhone}" 
                                               Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- 닫기 버튼 -->
            <Button Grid.Row="2" 
                    Content="닫기" 
                    Width="120" Height="45"
                    Margin="0,20,0,0"
                    FontSize="16" FontWeight="Bold"
                    Background="#2196F3" Foreground="White"
                    BorderThickness="0"
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>